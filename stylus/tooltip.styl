.jcake-tooltip
  alpha 0
  linear_gradient #333, #000
  rounded 3px

  background-color: #000
  color: #eee
  font-size: 12px
  padding: 6px 10px 6px 10px
  position: absolute
  z-index: 999

  p
    margin: 0px
    padding: 0px

  .jcake-arrow
    position: absolute
    z-index: 999

  .jcake-arrow-up-black
    alpha 80

    height: 4px
    left: 50%
    margin-left: -3px
    margin-top: -4px
    top: 0px
    width: 7px

  .jcake-arrow-right-black
    height: 7px
    left: 100%
    margin-top: -3px
    top: 50%
    width: 4px

  .jcake-arrow-down-black
    height: 4px
    left: 50%
    margin-left: -3px
    top: 100%
    width: 7px

  .jcake-arrow-left-black
    height: 7px
    left: 0px
    margin-left: -4px
    margin-top: -3px
    top: 50%
    width: 4px
