.jcake-slideshow
  display: block
  overflow: hidden
  position: relative

  .jcake-slideshow-slide
    left: 0px
    overflow: hidden
    position: absolute
    top: 0px
    width: 100%
  
  .jcake-slideshow-arrowleft,
  .jcake-slideshow-arrowright
    rounded(5px)
    alpha(40)

    background-position: center center
    background-repeat: no-repeat
    cursor: pointer
    height: 93px
    margin-top: -46px
    position: absolute
    top: 50%
    visibility: hidden
    width: 45px
    z-index: 992

    &:hover
      alpha(60)
  
  .jcake-slideshow-arrowleft
    background-image: url(unquote('data:image/png;base64,'))
  
  .jcake-slideshow-arrowright
    background-image: url(unquote('data:image/png;base64,'))

  &:hover
    .jcake-slideshow-arrowleft, .jcake-slideshow-arrowright
      visibility: visible
