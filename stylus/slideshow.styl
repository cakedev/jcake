.jcake-slideshow
  display: block
  overflow: hidden
  position: relative
  width: 100%

  .jcake-slideshow-slide
    height: 100%
    left: 0px
    position: absolute
    top: 0px
    width: 100%

  .jcake-slideshow-navigation
    bottom: 0px
    padding: 15px 0px
    position: absolute
    text-align: center
    width: 100%

    .jcake-slideshow-bullet
      rounded 16px
      shadow 0px 0px 0px 2px rgba(255, 255, 255, 0.5)
      transition all 0.2s

      background-color: rgba(0, 0, 0, 0.02)
      cursor: pointer
      display: inline-block
      height: 12px
      margin: 0px 8px
      padding: 2px
      width: 12px

      .jcake-slideshow-bullet-dot
        rounded 16px

        background-color: rgba(255, 255, 255, 0.7)
        display: block
        height: 100%
        visibility: hidden

      &:hover
        shadow 0px 0px 0px 6px rgba(255, 255, 255, 0.6)

      &.jcake-slideshow-bullet-selected
        shadow 0px 0px 0px 6px rgba(255, 255, 255, 0.5)
          
        cursor: default
          
        .jcake-slideshow-bullet-dot
          visibility: visible
